<Window x:Class="MusicZeroV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        Title="MusicZero" Height="30" Width="1920" 
        WindowStyle="None" ResizeMode="NoResize"
        Topmost="True" WindowStartupLocation="Manual"
        Top="0" Left="0"
        Background="Transparent"
        ShowInTaskbar="False"
        ShowActivated="False"
        AllowsTransparency="True"
        Visibility="Visible"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave"
        KeyDown="Window_KeyDown">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Montserrat SemiBold"/>
            <Setter Property="FontWeight" Value="600"/>
        </Style>

        <Storyboard x:Key="ExpandAnimation">
            <DoubleAnimation 
                Storyboard.TargetName="ContentPanel"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1" Duration="0:0:0.2"/>
            <ThicknessAnimation
                Storyboard.TargetName="ContentPanel"
                Storyboard.TargetProperty="Margin"
                From="0,-28,0,0" To="0,0,0,0" Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="CollapseAnimation">
            <DoubleAnimation 
                Storyboard.TargetName="ContentPanel"
                Storyboard.TargetProperty="Opacity"
                From="1" To="0" Duration="0:0:0.2"/>
            <ThicknessAnimation
                Storyboard.TargetName="ContentPanel"
                Storyboard.TargetProperty="Margin"
                From="0,0,0,0" To="0,-28,0,0" Duration="0:0:0.2"/>
        </Storyboard>

        <!-- SVG Icons -->
        <Geometry x:Key="PreviousIcon">M6,6 H8 V18 H6 V6 M9.5,12 L18,18 V6 L9.5,12 Z</Geometry>
        <Geometry x:Key="PlayIcon">M8,5 V19 L19,12 L8,5 Z</Geometry>
        <Geometry x:Key="PauseIcon">M6,19 H10 V5 H6 V19 M14,19 H18 V5 H14 V19 Z</Geometry>
        <Geometry x:Key="NextIcon">M6,18 L14.5,12 L6,6 V18 M16,6 V18 H18 V6 H16 Z</Geometry>
        <Geometry x:Key="ExpandIcon">M8.59,16.59 L13.17,12 L8.59,7.41 L10,6 L16,12 L10,18 L8.59,16.59 Z</Geometry>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>

        <!-- Progress Bar -->
        <ProgressBar x:Name="ProgressBar" 
                    Grid.Row="0"
                    Height="2" 
                    Background="#33FFFFFF"
                    Foreground="#1DB954"/>

        <!-- Content Panel -->
        <Border x:Name="ContentPanel"
                Grid.Row="1"
                Background="#1E1E1E"
                Opacity="0"
                Margin="0,-28,0,0"
                Visibility="Collapsed">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Track Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="TitleText" 
                              Text="Not Playing" 
                              Foreground="White" 
                              FontSize="11" 
                              TextTrimming="CharacterEllipsis"
                              Margin="0,0,5,0"/>
                    <TextBlock Text="-" 
                              Foreground="#AAAAAA" 
                              FontSize="11"
                              Margin="0,0,5,0"/>
                    <TextBlock x:Name="ArtistText" 
                              Text="No Artist" 
                              Foreground="#AAAAAA" 
                              FontSize="11" 
                              TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <!-- Up Next -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Margin="10,0">
                    <TextBlock Text="Up Next: " 
                              Foreground="#AAAAAA" 
                              FontSize="11"/>
                    <TextBlock x:Name="UpNextText" 
                              Text="Nothing" 
                              Foreground="White" 
                              FontSize="11" 
                              TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <!-- Playback Controls -->
                <StackPanel Grid.Column="3" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="10,0,20,0">
                    <Button x:Name="PreviousButton" 
                            Click="PreviousButton_Click"
                            Margin="0,0,16,0">
                        <Path Data="M6 6h2v12H6zm3.5 6l8.5 6V6z" 
                              Fill="White" 
                              Stretch="Uniform"/>
                    </Button>
                    <Button x:Name="PlayPauseButton" 
                            Click="PlayPauseButton_Click"
                            Margin="0,0,16,0">
                        <Path x:Name="PlayPauseIcon" 
                              Data="M8 5v14l11-7z" 
                              Fill="White" 
                              Stretch="Uniform"/>
                    </Button>
                    <Button x:Name="NextButton" 
                            Click="NextButton_Click">
                        <Path Data="M6 18l8.5-6L6 6v12zM16 6v12h2V6h-2z" 
                              Fill="White" 
                              Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 